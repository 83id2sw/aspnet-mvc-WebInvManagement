<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-100: #2E8B57;
            --primary-200: #61bc84;
            --primary-300: #c6ffe6;
            --accent-100: #8FBC8F;
            --accent-200: #345e37;
            --text-100: #FFFFFF;
            --text-200: #e0e0e0;
            --bg-100: #1E1E1E;
            --bg-200: #2d2d2d;
            --bg-300: #454545;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--bg-200);
            color: var(--text-100);
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid var(--bg-300);
        }

        th {
            background-color: var(--primary-200);
            color: var(--text-100);
        }

        tr:hover {
            background-color: var(--bg-300);
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Production Stocks</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Quantity</th>
                    <th>Stock Type</th>
                    <th>ABC Group</th>
                    <th>XYZ Group</th>
                    <th>Last Order Date</th>
                    <th>Last Updated</th>
                    <th>Lead Time</th>
                    <th>Max Order Quantity</th>
                    <th>Min Order Quantity</th>
                    <th>Notes</th>
                    <th>Service Level</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <!-- Placeholder rows -->
                <tr>
                    <td>1</td>
                    <td>100</td>
                    <td>Raw Material</td>
                    <td>A</td>
                    <td>X</td>
                    <td>2024-04-25</td>
                    <td>2024-04-25</td>
                    <td>5 days</td>
                    <td>500</td>
                    <td>100</td>
                    <td>Some notes...</td>
                    <td>High</td>
                    <td>Active</td>
                </tr>
                <!-- More rows can be added here -->
            </tbody>
        </table>
    </div>
</body>
</html>