@model IEnumerable<ProductionStock>

@{
    ViewData["Title"] = "ProductionStock Page";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px;
        }

        th {
        }

        tr:hover {
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Production Stocks</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Quantity</th>
                    <th>Stock Type</th>
                    <th>Last Order Date</th>
                    <th>Last Updated</th>
                    <th>Lead Time</th>
                    <th>Max Order Quantity</th>
                    <th>Min Order Quantity</th>
                    <th>Notes</th>
                    <th>Service Level</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Quantity</td>
                        <td>@item.StockTypeId</td>
                        <td>@item.LastOrderDate</td>
                        <td>@item.LastUpdated</td>
                        <td>@item.LeadTime</td>
                        <td>@item.MaxOrderQuantity</td>
                        <td>@item.MinOrderQuantity</td>
                        <td>@item.Notes</td>
                        <td>@item.ServiceLevel</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>